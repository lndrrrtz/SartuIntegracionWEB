<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
	"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
	"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	
	<definition name="baseTiles" template="/WEB-INF/jsps/templates/base.jsp">
		<put-attribute name="header" value="/WEB-INF/jsps/templates/header.jsp" />
		<put-attribute name="cuerpo" type="string" value="" />
	</definition>

	<definition name="*" extends="baseTiles">
		<put-attribute name="cuerpo" value="/WEB-INF/jsps/views/{1}.jsp"/>
	</definition>
	
	<definition name="*/*" extends="baseTiles">
		<put-attribute name="cuerpo" value="/WEB-INF/jsps/views/{1}/{2}.jsp"/>
	</definition>
	
</tiles-definitions>